<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ibm.visualtospeech" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Visual-To-Speech</name>
    <description>
        An app that allows user to take a picture and hear the app say what is in the picture. The app will analyze the image and speak what is on it.
    </description>
    <author email="ldavid@br.ibm.com" href="https://github.com/leandrodvd">
        Leandro David
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-camera" spec="~1.2.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.3.0" />
    <plugin name="cordova-plugin-file" spec="~3.0.0" />
    <plugin name="cordova-plugin-media" spec="~1.0.1" />
</widget>
